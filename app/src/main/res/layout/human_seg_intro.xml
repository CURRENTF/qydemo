<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    >

    <RelativeLayout
        android:layout_width="300dp"
        android:layout_height="200dp"
        android:gravity="center"
        android:background="@drawable/game_dialog_bg"
        >
        <EditText
            android:id="@+id/intro"
            android:layout_width="200dp"
            android:layout_height="110dp"
            android:hint="给您的分段写一个简介吧！"
            android:inputType="textMultiLine"
            android:background="@drawable/color_white_radius"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:textSize="14.67sp"
            android:singleLine="false"
            android:maxLines="5"
            android:gravity="top"
            android:scrollHorizontally="false"
            />

        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/intro"
            android:orientation="horizontal"
            android:gravity="center"
            >
        <Button
            android:id="@+id/upload"
            android:layout_height="wrap_content"
            android:layout_width="60dp"
            android:text="上传"
            android:textSize="14.5sp"
            android:background="@drawable/game_btn_dialog_bg"
            android:textColor="@color/white"
            android:layout_marginRight="30dp"
            />

        <Button
            android:id="@+id/cancel"
            android:layout_height="wrap_content"
            android:layout_width="60dp"
            android:text="取消"
            android:textSize="14.5sp"
            android:layout_toRightOf="@+id/upload"
            android:background="@drawable/game_btn_dialog_bg"
            android:textColor="@color/white"
            />
        </LinearLayout>

    </RelativeLayout>

</LinearLayout>