<?xml version="1.0" encoding="utf-8"?>
<com.example.qydemo0.view.CustomLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/cover"
        android:layout_width="100dp"
        android:layout_height="80dp"
        android:src="@drawable/logo"
        android:layout_margin="10dp"
        />
    <RelativeLayout
        android:layout_width="200dp"
        android:layout_height="match_parent"
        android:layout_margin="10dp">
    <com.example.qydemo0.view.CustomTextView
        android:id="@+id/content"
        android:textSize="15sp"
        android:textColor="@color/black"
        android:text="123"
        android:layout_width="200dp"
        android:layout_height="20dp"
        android:gravity="center" />
        <TextView
            android:id="@+id/render_params"
            android:textSize="12sp"
            android:textColor="@color/black"
            android:layout_below="@id/content"
            android:text="美颜滤镜"
            android:layout_width="200dp"
            android:layout_height="20dp"
            android:gravity="center"
            />

        <com.google.android.material.progressindicator.LinearProgressIndicator
            android:id="@+id/progress_render"
            android:layout_below="@id/render_params"
            android:layout_width="200dp"
            android:layout_height="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:gravity="center"
            />

</RelativeLayout>

    <ImageView
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:src="@drawable/download"
        android:background="@color/gray"
        android:padding="10dp"
        android:layout_gravity="center"
        android:layout_margin="10dp"
        />

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#ffffff"/>
</com.example.qydemo0.view.CustomLinearLayout>