<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="52dp"
        android:layout_marginRight="48dp"
        android:background="#F6F6F6"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/reply_item_user"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="未知 回复 未知:"
            android:textColor="#626262"
            android:textSize="14sp" />

        <LinearLayout
            android:layout_width="175dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="10dp"
            android:background="#F6F6F6"
            android:orientation="vertical">

            <TextView
                android:id="@+id/reply_item_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:paddingLeft="4dp"
                android:text="世上本没有路，走的人多了,也就成了路"
                android:textColor="#949494"
                android:textSize="12sp" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/comment_item_like"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:padding="1dp"
                android:src="@drawable/icon_comment_like" />

            <TextView
                android:id="@+id/reply_like_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:text="123"
                android:textColor="@color/exo_gray"
                android:textSize="8sp" />

             <ImageView
                android:id="@+id/comment_click"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_marginLeft="10dp"
                android:src="@drawable/comment_icon"
                android:padding="1dp"/>

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>