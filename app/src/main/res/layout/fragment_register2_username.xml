<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frameLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.RegisterWays.Register2UsernameFragment">

    <LinearLayout
        android:id="@+id/CL3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/edit_text_phone_verify"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:textSize="18sp"
            android:gravity="center_vertical"
            android:textColor="@color/black"
            android:layout_weight="0.5"/>

        <Button
            android:id="@+id/button_send_register_code"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            android:textColor="@color/white"
            android:text="@string/send_phone_verify_code"/>
    </LinearLayout>

    <EditText
        android:id="@+id/edit_text_verify_code"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:hint="@string/phone_verify_code" />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button_finish_register"
        android:text="@string/verify"
        android:textColor="@color/white"
        android:layout_gravity="center"/>

</LinearLayout>